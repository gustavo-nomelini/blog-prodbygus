---
import { CATEGORIES } from '../consts';

interface Props {
  activeCategory?: string;
}

const { activeCategory } = Astro.props;
---

<div class="category-filter mb-8">
  <div class="category-badges-container">
    {CATEGORIES.map((category) => (
      <div class="badge-wrapper">
        <a 
          href={`/category/${category.slug}`} 
          class={`badge ${activeCategory === category.slug ? 'active' : ''}`}
          aria-current={activeCategory === category.slug ? 'page' : undefined}
        >
          {category.name}
        </a>
      </div>
    ))}
  </div>
</div>

<style>
  .category-badges-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
    justify-content: center;
  }
  
  .badge {
    display: inline-flex;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    background-color: var(--surface);
    color: var(--text);
    transition: all 0.3s ease;
  }
  
  .badge:hover {
    background-color: var(--primary);
    color: var(--background);
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(var(--primary-rgb), 0.1), 
                0 2px 4px -1px rgba(var(--primary-rgb), 0.06);
  }
  
  .badge.active {
    background-color: var(--primary);
    color: var(--background);
    box-shadow: 0 4px 6px -1px rgba(var(--primary-rgb), 0.2), 
                0 2px 4px -1px rgba(var(--primary-rgb), 0.12);
  }
  
  /* Estilos espec√≠ficos para mobile */
  @media (max-width: 640px) {
    .category-badges-container {
      flex-direction: column;
      gap: 1rem;
      width: 100%;
    }
    
    .badge-wrapper {
      width: 100%;
      display: flex;
      justify-content: center;
    }
    
    .badge {
      width: 80%;
      max-width: 250px;
      display: flex;
      justify-content: center;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
    }
  }
</style> 