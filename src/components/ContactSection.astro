---
import { Icon } from 'astro-icon/components';
import ContactForm from './ContactForm.astro';
import Map from './Map.astro';

interface Props {
  location?: string;
  email?: string;
  phone?: string;
  whatsappNumber?: string;
  whatsappMessage?: string;
}

const { 
  location = "Cascavel - PR",
  email = "gustavolnomelini@gmail.com",
  phone = "(45) 99850-8634",
  whatsappNumber = "5545998508634",
  whatsappMessage = "Olá! Peguei seu contato no seu BLOG, tenho interesse em conversar contigo a respeito dos seus serviços."
} = Astro.props;

const encodedMessage = encodeURIComponent(whatsappMessage);
---

<div class="flex flex-col gap-12 md:flex-row">
  <div class="w-full md:w-1/2">
    <p class="text-[var(--foreground-muted)] mb-8">
      Preencha o formulário ao lado ou entre em contato diretamente pelos meus canais de comunicação.
    </p>
    
    <div class="mb-8">
      <a
        href={`https://wa.me/${whatsappNumber}?text=${encodedMessage}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 text-white bg-green-600 hover:bg-green-700 transition-colors px-6 py-3 rounded-lg shadow-lg hover:shadow-green-500/20"
      >
        <Icon name="mdi:whatsapp" class="w-5 h-5" />
        <span>Fale pelo WhatsApp</span>
      </a>
    </div>
    
    <div class="space-y-6 text-[var(--foreground-muted)]">
      <div class="flex items-center gap-3 hover:text-[var(--foreground)] transition-colors">
        <div class="w-10 h-10 rounded-full bg-[var(--color4)]/20 flex items-center justify-center">
          <Icon name="mdi:map-marker" class="w-5 h-5 text-[var(--color1)]" />
        </div>
        <div>
          <p class="font-medium text-[var(--foreground)]">Localização</p>
          <span>{location}</span>
        </div>
      </div>

      <div class="flex items-center gap-3 hover:text-[var(--foreground)] transition-colors">
        <div class="w-10 h-10 rounded-full bg-[var(--color4)]/20 flex items-center justify-center">
          <Icon name="mdi:email" class="w-5 h-5 text-[var(--color1)]" />
        </div>
        <div>
          <p class="font-medium text-[var(--foreground)]">Email</p>
          <a href={`mailto:${email}`} class="hover:text-[var(--color1)]">
            {email}
          </a>
        </div>
      </div>

      <div class="flex items-center gap-3 hover:text-[var(--foreground)] transition-colors">
        <div class="w-10 h-10 rounded-full bg-[var(--color4)]/20 flex items-center justify-center">
          <Icon name="mdi:phone" class="w-5 h-5 text-[var(--color1)]" />
        </div>
        <div>
          <p class="font-medium text-[var(--foreground)]">Telefone</p>
          <a href={`tel:+${whatsappNumber}`} class="hover:text-[var(--color1)]">
            {phone}
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="w-full md:w-1/2">
    <div class="bg-[var(--color4)]/10 p-6 md:p-8 rounded-lg shadow-lg border border-[var(--color4)]/20">
      <h3 class="text-xl font-semibold text-[var(--foreground)] mb-6">Envie uma mensagem</h3>
      <ContactForm />
    </div>
  </div>
</div>

<div class="mt-16 h-[400px] rounded-lg overflow-hidden shadow-lg">
  <Map location={location} />
</div> 